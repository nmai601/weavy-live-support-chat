@{
    Layout = "~/Views/Space/_Layout.cshtml";
}

@if (IsSectionDefined("styles")) {
    @section styles {
        @RenderSection("styles")
    }
}

@if (IsSectionDefined("scripts")) {
    @section scripts {
        @RenderSection("scripts")
    }
}

@section navbar_middle {
    @if (IsSectionDefined("navbar_middle")) {
        @RenderSection("navbar_middle")
    } else {
        Html.RenderPartial("_NavbarMenu");
    }
}

@section navbar_secondary {
    @if (IsSectionDefined("navbar_secondary")) {
        @RenderSection("navbar_secondary")
    } else {
        Html.RenderPartial("~/Views/Space/_Navbar.cshtml");
    }
}

@if (IsSectionDefined("navbar_tertiary")) {
    @section navbar_tertiary {
        @RenderSection("navbar_tertiary")
    }
}

@RenderBody()

@if (IsSectionDefined("fab")) {
    @section fab {
        @RenderSection("fab")
    }
}

@if (IsSectionDefined("footer")) {
    @section footer {
        @RenderSection("footer")
    }
}

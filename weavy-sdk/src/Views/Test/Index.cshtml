    <section id="formatting">
        <h1 class="display-3 mt-4">Localization</h1>
        <div class="row">
            <div class="col">
                @T["Language"]: @CultureInfo.CurrentUICulture<br />
                @T["Format"]: @CultureInfo.CurrentCulture<br />
                @T["First day of week"]: @CultureInfo.CurrentCulture.DateTimeFormat.DayNames[(int)CultureInfo.CurrentCulture.DateTimeFormat.FirstDayOfWeek]<br />
                @T["Decimal symbol"]: @CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator<br />
                @T["Time zone"]: @WeavyContext.Current.TimeZone.DisplayName<br />
                @T["Date"]: @now.ToString("s")<br />
                @T["Short date"]: @now.ToLocal().ToShortDateString()<br />
                @T["Long date"]: @now.ToLocal().ToLongDateString()<br />
                @T["Short time"]: @now.ToLocal().ToShortTimeString()<br />
                @T["Long time"]: @now.ToLocal().ToLongTimeString()<br />
            </div>
            <div class="col">
                @T["Lorem ipsum."]<br />
                <br/>
                @{ Html.RenderPartial("_Localization"); }
            </div>
        </div>
    </section>

    <section id="colors">
        <h1 class="display-3 mt-4">Colors</h1>
        <hr />
        <div class="row ">
            @foreach (var color in colors) {
                <div class="col-6 col-sm-4 col-lg-2 mb-4">
                    <div class="p-2 swatch-@color">@color.Replace("-", " ").ToTitleCase()</div>
                    <div class="p-2 text-@color">Abc @Svg.Icon("palette")</div>
                    @foreach (var shade in shades) {
                        var name = theme.ContainsKey(color + "-" + shade) ? " = " + theme[color + "-" + shade].ToTitleCase() : null;
                        <div class="p-2 swatch-@color-@shade">@shade @name</div>
                    }
                </div>
            }
        </div>
    </section>


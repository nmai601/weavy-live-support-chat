<div class="modal fade" id="members-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog scroll-y" role="document">
        <div class="modal-content">
            <div class="modal-header pane-header">
                <button type="button" class="btn btn-icon" data-dismiss="modal"></button>
                <div class="pane-title text-truncate">@T["Add members"]</div>
                <button type="button" class="btn btn-icon" data-dismiss="modal">@Svg.Icon("close")</button>
            </div>
            <div class="modal-body pb-0">
                <form class="search-form" action="@(Url.Action<SpaceController>(c => c.MembersModalContent(null, null)))" method="get" role="search" data-target="#members-form">
                    <div class="form-group">
                        <input type="text" name="q" value="" class="form-control" placeholder="@T["Find people to add..."]" autocomplete="off" />
                        <button type="submit" class="btn btn-icon btn-search">@Svg.Icon("magnify")</button>
                        <button type="button" class="btn btn-icon btn-reset">@Svg.Spinner(size: 18, spin: true)@Svg.Icon("close")</button>
                    </div>
                </form>
                @* data-turboform? *@
                <form id="members-form" action="@(Url.Action<SpaceController>(c => c.InsertMembers(WeavyContext.Space.Id, null)))" method="post" data-turboform>
                </form>
            </div>
            <div class="modal-footer pt-0">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@T["Close"]</button>
                <button type="button" class="btn btn-primary" data-action="submit" data-form="#members-form" disabled>@T["Add selected"]</button>
            </div>
        </div>
    </div>
</div>



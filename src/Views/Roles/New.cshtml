@model Role
@{
    Title = T["Add role"].ToString();
    Back = Url.Action<RolesController>(c => c.Index(null));
}

<div class="container my-3">
    @using (Html.BeginForm(nameof(RolesController.Insert), null, FormMethod.Post, new { autocomplete = "off", data_turboform = "", novalidate = "" })) {

        @Html.EditorsForModel()
        <div class="form-buttons">
            <button type="submit" class="btn btn-primary btn-load" title="Save">@T["Save"]</button>
            <a href="@Back" class="btn btn-outline-secondary mr-auto">@T["Cancel"]</a>
        </div>

    }



</div>

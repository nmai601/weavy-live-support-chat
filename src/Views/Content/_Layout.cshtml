@{
    Layout = "~/Views/Space/_Layout.cshtml";
}

@if (IsSectionDefined("styles")) {
    @section styles {
        @RenderSection("styles")
    }
}

@if (IsSectionDefined("scripts")) {
    @section scripts {
        @RenderSection("scripts")
    }
}

@if (IsSectionDefined("navbar_left")) {
    @section navbar_left {
        @RenderSection("navbar_left")
    }
}

@section navbar_middle {
    @if (IsSectionDefined("navbar_middle")) {
        @RenderSection("navbar_middle")
    } else {
        Html.RenderPartial("_NavbarMenu");
    }
}

@if (IsSectionDefined("navbar_right")) {
    @section navbar_right {
        @RenderSection("navbar_right")
    }
}

@if (IsSectionDefined("navbar_secondary")) {
    @section navbar_secondary {
        @RenderSection("navbar_secondary")
    } 
}

@if (IsSectionDefined("navbar_tertiary")) {
    @section navbar_tertiary {
        @RenderSection("navbar_tertiary")
    }
}

@RenderBody()

@if (IsSectionDefined("fab")) {
    @section fab {
        @RenderSection("fab")
    }
}

@section footer {
    @{
        Html.RenderPartial("_FeedbackModal");
        Html.RenderPartial("_EditCommentModal");
        @RenderSection("footer", required: false)
    }
}



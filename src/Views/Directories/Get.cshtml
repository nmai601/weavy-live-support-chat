@model Weavy.Core.Models.Directory
@{
    Title = T["Edit directory"].ToString();
    Back = Url.Action<DirectoriesController>(c => c.Index(null));
}


<div class="container my-3">
    @using (Html.BeginForm(nameof(DirectoriesController.Update), null, new { id = Model.Id }, FormMethod.Post, new { autocomplete = "off", data_turboform = "", novalidate = "" })) {
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.EditorsForModel()
        <div class="form-buttons">
            <button type="submit" name="button" value="@nameof(DirectoriesController.Update)" class="btn btn-primary btn-load" title="Save">@T["Save"]</button>
            <a href="@Back" class="btn btn-outline-secondary mr-auto">@T["Cancel"]</a>

            <button type="submit" name="button" value="@nameof(DirectoriesController.Delete)" class="btn btn-danger btn-load" title="Delete">@T["Delete"]</button>
        </div>
    }
</div>
